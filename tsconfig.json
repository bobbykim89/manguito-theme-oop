{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "removeComments": true,
    "strict": true,

    "target": "ES2017",
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["./dist/**/*", "./node_modules/**/*"],
  "include": ["./src/**/*.ts"]
}
